<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/courtnetdarkland"
    android:padding="@dimen/layout_margin"
    tools:context="com.example.android.ccojocea.tenniscounter.MainActivity">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin_layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/player_one"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_xs" />

            <TextView
                android:id="@+id/player_one_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="0"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/player_one_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="0"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/player_one_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin_big"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="0"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_large" />

            <ImageButton
                android:id="@+id/add_points_player_one"
                android:layout_width="@dimen/img_button_size"
                android:layout_height="@dimen/img_button_size"
                android:background="@drawable/ballbutton"
                android:onClick="addPointsPlOne" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_lin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lin_layout_left"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:textSize="@dimen/font_size_xs" />

            <TextView
                android:id="@+id/sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/sets"
                android:textAllCaps="true"
                android:textColor="@color/colortextlight"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/games"
                android:textAllCaps="true"
                android:textColor="@color/colortextlight"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/points"
                android:layout_width="@dimen/points_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin_big"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/points"
                android:textAllCaps="true"
                android:textColor="@color/colortextlight"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/undo_button"
                android:layout_width="100dp"
                android:layout_height="@dimen/img_button_size"
                android:background="@drawable/tennisracket"
                android:enabled="false"
                android:onClick="undoLastAction"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/undo"
                android:textColor="@color/undocolor"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/center_lin_layout"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/player_two"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_xs" />

            <TextView
                android:id="@+id/player_two_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="0"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/player_two_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="0"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/player_two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_vertical_margin_big"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="0"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_large" />

            <ImageButton
                android:id="@+id/add_points_player_two"
                android:layout_width="@dimen/img_button_size"
                android:layout_height="@dimen/img_button_size"
                android:background="@drawable/ballbutton"
                android:onClick="addPointsPlTwo" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/resetback"
        android:enabled="false"
        android:onClick="resetScores"
        android:padding="@dimen/padding_button"
        android:text="@string/reset_scores"
        android:textColor="@color/resetcolor" />

    <TextView
        android:id="@+id/win_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/rel_layout"
        android:layout_marginLeft="@dimen/layout_margin"
        android:gravity="right"
        android:maxLines="2"
        android:shadowColor="@color/black"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="0.5"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/colorTennisBall"
        android:textSize="@dimen/font_size_medium" />

    <TableLayout
        android:id="@+id/scores_table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/reset_button"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/layout_vertical_margin"
        android:background="@drawable/roundedrectangle"
        android:visibility="invisible">

        <TableRow
            android:id="@+id/player_one_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_small"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/player_one"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/player_one_score_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_small"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text=""
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_small" />

        </TableRow>

        <TableRow
            android:id="@+id/player_two_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_small"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text="@string/player_two"
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/player_two_score_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_small"
                android:shadowColor="@color/black"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="0.5"
                android:text=""
                android:textColor="@color/colorTennisBall"
                android:textSize="@dimen/font_size_small" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
